<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RedContactos.View.Contactos.AddContactoView"
             Title="{Binding Titulo}">
  <ListView ItemsSource="{Binding NoAmigos}">
    <ListView.ItemTemplate>
      <DataTemplate>
        <ViewCell>
          <ViewCell.ContextActions>
            <MenuItem Text="Añadir" BindingContext="{Binding}" Command="{Binding CmdAdd}" CommandParameter="{Binding idDestino}"/>
          </ViewCell.ContextActions>
          <StackLayout>
          <Label Text="{Binding nombreCompleto}"></Label>
          </StackLayout>
        </ViewCell>
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>
</ContentPage>