<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RedContactos.View.LoginView"
             Title="{Binding Titulo}">
  <StackLayout>
    <Label Text="Login"></Label>
    <Entry Text="{Binding Usuario.login}"></Entry>
    <Label Text="Password"></Label>
    <Entry Text="{Binding Usuario.password}"></Entry>
    <Button Text="Logear" Command="{Binding CmdLogin}"></Button>
    <Button Text="Alta Usuario" Command="{Binding CmdAlta}"></Button>
  </StackLayout>
</ContentPage>